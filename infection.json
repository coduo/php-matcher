{
  "timeout": 1000,
  "source": {
    "directories": [
      "src"
    ]
  },
  "logs": {
    "text": "var/logs/infection.log",
    "summary": "var/logs/infection_summary.log",
    "debug": "var/logs/infection_summary.log"
  },
  "minMsi": 60,
  "minCoveredMsi": 65,
  "mutators": {
    "@default": true
  },
  "testFramework": "phpunit",
  "phpUnit": {
    "customPath": "vendor\/bin\/phpunit"
  },
  "bootstrap": "./vendor/autoload.php"
}
